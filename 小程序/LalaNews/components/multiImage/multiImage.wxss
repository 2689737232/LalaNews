/* components/multiImage/multiImage.wxss */
.container {
    position: relative;
    padding: 15rpx 5rpx;
    width: 100%;
    height: 600rpx;
}

.image-grounp {
    width: 100%;
    height: 550rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}

.image-item {
    flex: 0 0 31%;
    height: 33%;
    border-radius: 10%;
}

.description-wrapper {
    line-height: 50rpx;
    height: 50rpx;
    width: 100%;
    display: flex;
}

.author {
    flex: 0 0 15%;
    height: 100%;
    font-size: 25rpx;
    color: #AAAAAA;
    padding-right: 25rpx;
}

.description {
    flex: 0 0 85%;
    height: 100%;
    font-size: 20rpx;
    overflow: hidden;
    color: black;
}

.swiper-image {
    position: absolute;
    top: 0;
    left: 0;
    background-color: chocolate;
    width: 100vw;
    height: 100vh;
}