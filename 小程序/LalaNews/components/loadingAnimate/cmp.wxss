.container {
    display: inline-block;
    width: 100%;
    height: 50rpx;
}
@keyframes outer {
    0% {
        transform: scale(0)
    }
    50% {
        transform: scale(1)
    }
    100% {
        transform: scale(0)
    }
}
.wrap{
    position: relative;
    top: 5rpx;
    margin: 0 auto;
    width: 50rpx;
    height: 50rpx;
}
.circle {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
}

.circle1 {
    background-color: rgba(190, 188, 188, 0.5);
    animation: outer linear 1.5s infinite;
}

.circle2 {
    background-color: rgba(0, 0, 0, .5);
    animation: outer linear 1.5s infinite 0.5s;
}