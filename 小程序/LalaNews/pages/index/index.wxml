<view class="wrapper">
	<!-- 顶部的标签分类 -->
	<!-- 通过自定义事件，获取子组件点击的标签项 -->
	<index-scroll tagArr="{{tagArr}}" class="top-tag" bind:customevent="itemClick" />
	<!-- 底部的新闻列表 -->
	<index-list
	 isOver="{{newsList.length % 3 > 0 || newsList.length == 0}}"
	 class="newsList"
	 bind:customevent="reachBottom"
	 newsList="{{newsList}}"
	/>
</view>

