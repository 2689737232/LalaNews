<view class="search-container">
	<scroll-view
	 class=""
	 scroll-y="true"
	 upper-threshold="50"
	 lower-threshold="50"
	 scroll-top="0"
	 scroll-left="0"
	 scroll-into-view=""
	 scroll-with-animation="false"
	 enable-back-to-top="true"
	>
		<!-- 搜索 -->
		<view class="search-box">
			<image class="search-icon" src="https://allall01.baidupcs.com/file/5fd84699ej51cefd77a9eb279e0f5a3f?bkt=en-43ea5360a23c0e20121fb8f53c4517e6f55d2eab5cfc89ee8241ea7c0017d5563a95e1965e9cf429b3861d02d99b320ce3634df01d1ebfb9f700dfd0f2f4c719&fid=2520579851-250528-732408632778266&time=1584769395&sign=FDTAXGERLQlBHSKfW-DCb740ccc5511e5e8fedcff06b081203-GXYzjoxx7DuM23VwVWzg%2BChwVuY%3D&to=79&size=6592&sta_dx=6592&sta_cs=0&sta_ft=png&sta_ct=0&sta_mt=0&fm2=MH%2CYangquan%2CAnywhere%2C%2Cchongqing%2Cpbs&ctime=1584769307&mtime=1584769307&resv0=-1&resv1=0&resv2=rlim&resv3=5&resv4=6592&vuk=2520579851&iv=0&htype=&randtype=&newver=1&newfm=1&secfm=1&flow_ver=3&pkey=en-cafb48cc891cf533cc88f606aef58e462661137183c598323093e5716b3477e54654b622c3bb70666a224d8e34c8b5ab03fd94d416e1b928305a5e1275657320&sl=68616270&expires=8h&rt=pr&r=352661616&vbdid=2297401724&fin=%E6%90%9C%E7%B4%A22.png&fn=%E6%90%9C%E7%B4%A22.png&rtype=1&dp-logid=1868685015008332653&dp-callid=0.1&hps=1&tsl=200&csl=200&fsl=-1&csign=Q8GLXaLW5jg96POqvgnVtikHPPY%3D&so=0&ut=6&uter=4&serv=0&uc=2970450506&ti=9cf67ec2c4eb6cc0736d722c22b8b780646d4093f9f546b5&reqlabel=250528_f_a72782ca42bdadb680a2d03302f49c52_-1_50a000a426f104dcd1d2af8487a21d52&by=themis" bind:tap="" />
			<input
			 value="{{value}}"
			 type="text"
			 bind:
			 class="search-input"
			 placeholder="搜索一下"
			 bindfocus="focus"
			 bindconfirm="confirm"
			 bindblur="blur"
			>
			576
			</input>
			<!-- 清除按钮 -->
			<text class="{{isFoucs?'focus-text text':'text'}}" bind:tap="clear">x</text>
		</view>
		<!-- 已经添加 -->
		<view class="already-add">
			<view class="already-add-text">已经添加</view>
			<block wx:for="{{alreadyAdd}}" wx:key="{{item.tagId}}">
				<view class="already-add-item">
					<text class="item-name">{{item.tagName}}</text>
					<text class="cancel-btn" data-index="{{index}}" bind:tap="cancelItem">取消</text>
				</view>
			</block>
		</view>
		<!-- 推荐区域 -->
		<view class="recommend-list-box">
			<view class="recommend-list-text">推荐</view>
			<view class="other-list">
				<text bind:tap="otherList">换一批</text>
			</view>
			<view class="recommend-list-wrapper">
				<!-- 循环recommendList渲染 -->
				<block wx:for="{{recommendList}}" wx:key="{{item.tagId}}">
					<view
					 data-index="{{index}}"
					 data-item="{{item}}"
					 bind:tap="itemTap"
					 bind:touchend="itemTouchEnd"
					 bind:touchstart="itemTouchStart"
					 class="recommend-list-item {{touchIndex == index ? 'active' : '' }}"
					>
						{{item.tagName}}
					</view>
				</block>
			</view>
		</view>
	</scroll-view>
</view>
<view class="foot" />

